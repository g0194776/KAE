<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Calendar1="clr-namespace:KJFramework.UI.Calendar"
	mc:Ignorable="d"
	x:Class="KJFramework.UI.Calendar.CalendarSelector"
	x:Name="UserControl"
	d:DesignWidth="130" d:DesignHeight="21" Focusable="True">

	<Grid x:Name="LayoutRoot">
        
		<TextBox Margin="0,0.42,1,-1.42" Text="" TextWrapping="Wrap" x:Name="tb_data" IsReadOnly="True"/>        
		    <Border HorizontalAlignment="Right" Margin="0,0.42,0,-1.42" Width="Auto" BorderThickness="0.5,0.5,0.5,0.5" BorderBrush="#FF000000" x:Name="bd_img">
			    <Image Cursor="Hand" x:Name="img_select" Width="Auto" Height="Auto" Stretch="None" MouseDown="img_select_MouseDown" Source="..\Imaging\selected.jpg"/>
		    </Border>
		    <Popup x:Name="pop" Visibility="Visible" Width="Auto" IsOpen="False" HorizontalAlignment="Left">
		    	<Calendar1:MonthCalendar x:Name="calendar"/>
		    </Popup>
	</Grid>
</UserControl>